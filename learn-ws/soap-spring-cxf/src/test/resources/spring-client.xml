<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<bean id="factoryBean" class="org.apache.cxf.jaxws.JaxWsProxyFactoryBean">
		<property name="serviceClass" value="org.learn.soap.spring.cxf.HelloService" />
		<property name="address" value="http://localhost:8080/soap-spring-cxf/service/soap/hello" />
	</bean>

	<bean id="helloService" factory-bean="factoryBean" factory-method="create" />

</beans>
